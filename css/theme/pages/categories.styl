.catalog-category-view
    .toolbar, .ias-noneleft
        display: none !important

    .page-title h1
        color: var(--color-title)
        text-transform: uppercase
        font-weight: bold
        font-style: italic
        font-size: 32px

    .slick
        &-arrow
            position: absolute
            top: 50%
            z-index: 20
            width: 50px
            height: 50px
            background: none
            box-shadow: none
            color: var(--color-arrow)
            transform: translateY(-50%)

            .ico
                width: 26px
                height: 26px
                fill: currentColor

        &-next
            right: 0

        &-prev
            left: 0

        &-list
            padding-top: 60px !important
            padding-bottom: 60px !important

        &-slide
            position: relative
            z-index: 1
            transition: all .2s ease-in-out

            @media media-min-lg
                transform: scale(1) translateY(10%)

            .products
                &__main
                    @media (min-width: 500px)
                        visibility: hidden
                        opacity: 0
                        transition: all .2s linear

        &-center
            z-index: 2

            @media media-min-lg
                transform: scale(1.2) translateY(0)

            .products
                &__header
                    box-shadow: inset 0 0 0 1px var(--color-link)

                &__main
                    visibility: visible
                    opacity: 1

    .products
        @media media-min-lg
            margin-top: -50px

        &__item
            padding: 0

        &__header
            padding: 1px
            box-shadow: 0 0 0 1px rgba(0, 0, 0, .1), 0 0 10px rgba(0, 0, 0, .1)

            @media media-min-lg
                overflow: hidden

                span
                    display: block
                    height: 100%

                img
                    max-height: 40vh
                    width: auto

        &__list
            margin: 0

        &__case
            box-shadow: none

        &__name
            padding-bottom: (gap / 2)
            text-transform: uppercase
            font-weight: bold
            font-size: 18px

        &__description
            margin-top: 10px
            padding-top: 10px
            border-top: solid 1px var(--color-white)
            text-transform: uppercase
            font-weight: regular
            font-size: 12px

        &__main
            display: flex
            flex-flow: column nowrap
            padding: (gap / 2)
            background: linear-gradient(to bottom, #1c6d9a, #2aa1e3)
            color: var(--primary-contrast)

            .button
                padding: 10px
                border-radius: 0
                background: var(--color-white)
                box-shadow: none
                color: var(--primary-hover)
                text-transform: uppercase
                font-weight: semibold
                font-size: 18px
