.cms-tef
    .forms
        padding: gap (gap / 2)
        background: var(--color-form)

        &__actions
            justify-content: flex-start

            .required
                margin-bottom: 0
                padding-left: 10px
                color: var(--color-link)
                font-weight: bold
                font-size: 12px
                opacity: 1

        button
            button()

            order: -1

        .title
            titleForm()

            padding: gap 0
            text-align: center

        .subtitle
            subtitleForm()

            padding-bottom: gap
            text-align: center

        label
            display: flex
            font-weight: regular
            font-size: 16px
            opacity: 1

            em
                order: 2
                color: var(--color-alert)

            &[for=field_29], &[for=field_30]
                padding-top: gap
                padding-bottom: (gap / 2)
                font-weight: bold
                font-size: 19px

        input[type=text]
            padding-right: 0
            padding-left: 0
            border-top-width: 0
            border-right-width: 0
            border-left-width: 0
            border-radius: 0
            background: none

        ul
            padding: 0
            list-style-type: none !important

        .input-box
            ul
                @media media-min-lg
                    column-count: 2

            li
                padding: (gap / 2) 0

        .control
            display: flex
            align-items: center

            label
                color: var(--color-link)
                font-weight: regular
                font-size: 16px