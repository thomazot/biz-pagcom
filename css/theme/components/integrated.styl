.integrated
    padding: (gap * 2) 0 0

    &__header
        text-align: center

    &__title
        title()

    &__subtitle
        subtitle()

        margin: gap 0

    &__main
        @media media-min-lg
            display: flex
            align-items: stretch
            gap: (gap / 2)

        @media media-max-lg
            margin-right: -(gap / 2)
            margin-left: -(gap / 2)

    &__case
        position: relative

        a
            position: absolute
            top: 0
            left: 0
            z-index: 2
            width: 100%
            height: 100%

        @media media-min-lg
            display: flex
            flex-flow: column nowrap
            background: linear-gradient(to right, var(--color-gray), transparent)

            &:hover
                background: linear-gradient(to right, var(--primary), var(--primary-hover))

                &, .integrated__name, .integrated__text
                    color: var(--color-white)

        @media media-max-lg
            padding: (gap / 2)

            &:before
                position: absolute
                top: 0
                left: 0
                z-index: -1
                width: 100%
                height: 100%
                background: linear-gradient(to right, var(--color-white), transparent)
                content: ''

            &:nth-child(odd)
                .integrated__name, .integrated__text
                    color: var(--color-white)

                &:before
                    background: linear-gradient(to right, var(--primary), transparent)

            &:after
                margin-bottom: (gap / 2)
                content: 'Contratar agora >>'

                link()

    &__name, &__text
        @media media-min-lg
            padding: 10px (gap / 2)

        @media media-max-lg
            padding: 10px 0
            width: 60%

    &__name
        position: relative
        margin-top: (gap / 2)
        color: var(--primary)
        text-transform: uppercase
        font-weight: bold
        font-size: 32px

        &:after
            display: block
            width: 64px
            height: 2px
            background: var(--color-text-blue)
            content: ''

            @media media-min-lg
                position: absolute
                top: 0
                left: 50%
                transform: translateX(-50%)

    &__text
        color: var(--color-link)
        font-weight: regular
        font-size: 16px

    &__img
        @media media-min-lg
            margin-top: auto

        @media media-max-lg
            position: absolute
            top: 0
            left: 0
            z-index: -2
            width: 100%
            height: 100%

            img
                width: 100%
                height: 100%
                object-fit: cover
