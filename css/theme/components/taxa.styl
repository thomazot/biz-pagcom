.taxa
    padding: (gap * 2) 0
    background: var(--color-blue)

    shadowBorder()

    &__main
        @media media-min-lg
            display: flex

    &__case
        display: flex
        flex: 1
        flex-flow: column nowrap
        padding: 10px gap
        min-width: 0
        text-align: center

        &--debito
            .taxa__perc
                margin-top: gap

        @media media-min-lg
            + .taxa__case
                border-left: solid 1px var(--color-link)

        @media media-max-lg
            padding: gap 0

            + .taxa__case
                border-top: solid 1px var(--color-link)

    &__img
        margin-top: auto

    &__title
        margin-bottom: 24px
        color: var(--primary)
        font-weight: bold
        font-size: 24px

    &__text
        color: var(--color-link)
        text-transform: uppercase
        font-weight: bold
        font-size: 14px

        a
            color: var(--color-text-blue)

    &__big
        color: var(--color-text-blue)
        text-transform: uppercase
        font-weight: bold
        font-size: 48px

    &__perc
        color: var(--color-link)
        font-weight: bold
        font-size: 32px

        small
            display: block
            font-weight: regular
            font-size: 14px

    &__percs
        display: flex
        justify-content: center
        align-items: center
        margin: gap 0
        gap: (gap / 2)

    &__obs
        padding-top: gap
        color: var(--color-link)
        font-weight: regular
        font-size: 12px

        a
            color: var(--color-text-blue)

    &__slides
        position: relative
        margin: gap auto
        max-width: 90%
        width: 255px
        height: 4px
        background: var(--color-text-blue)

    &__slide
        position: absolute
        top: -7px
        color: var(--color-link)
        text-align: center
        text-transform: uppercase
        white-space: nowrap
        font-weight: regular
        font-size: 14px

        &:first-child
            right: 100%
            transform: translateX(50%)

        &:last-child
            left: 100%
            transform: translateX(-50%)

        &:before
            display: block
            margin: 0 auto 10px
            width: 16px
            height: 16px
            border-radius: 50%
            background: var(--color-white)
            box-shadow: inset 0 0 0 4px var(--color-text-blue)
            content: ''
            cursor: pointer
            transition: all .2s ease-in-out
            transform: scale(1)

        &:hover:before
            transform: scale(1.3)

        &--actived
            &:before, &:hover:before
                transform: scale(1.8)

            &:after
                position: absolute
                bottom: calc(100% + .5rem)
                left: calc(50% - .5rem)
                display: block
                width: 0
                height: 0
                border: .5rem solid transparent
                border-top-color: #25aed7
                content: ''
                animation: floating .25s linear infinite alternate

@keyframes floating
    from
        transform: translate3d(0, -10%, 0)

    to
        transform: translate3d(0, 10%, 0)