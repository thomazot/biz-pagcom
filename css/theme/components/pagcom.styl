.pagcom
    &__grids
        @media media-max-lg
            margin-top: -(gap / 2)
            margin-right: -(gap / 2)
            margin-left: -(gap / 2)

        @media media-min-lg
            display: flex
            flex-flow: row wrap
            gap: gap

    &__container
        display: flex
        flex-flow: column nowrap
        width: 80%
        height: 100%

        @media media-min-lg
            width: 55%

    &__img
        position: absolute
        top: 0
        left: 0
        z-index: -1
        width: 100%
        height: 100%

        img
            display: block
            width: 100%
            height: 100%
            object-fit: cover

    &__title
        margin-bottom: (gap / 2)
        color: var(--color-white)
        text-transform: uppercase
        font-weight: bold
        font-size: 24px
        line-height: 1

        @media media-min-lg
            font-size: 40px

        &:after
            display: block
            margin-top: (gap / 2)
            width: 80px
            height: 2px
            background: var(--color-text-blue)
            content: ''

    &__list
        color: var(--color-white)
        font-weight: regular
        font-size: 12px

        @media media-min-lg
            font-size: 16px

        li
            display: block
            padding: 5px 0

    &__text
        color: var(--color-white)
        font-weight: regular
        font-size: 12px

        @media media-min-lg
            font-size: 16px

    &__actions
        margin-top: auto
        padding-top: (gap / 2)

    &__link
        link()

    &__banner
        position: relative
        flex: 1
        align-items: stretch
        padding: gap (gap / 2)
        min-width: 0

        @media media-min-lg
            flex: '1 1 calc(50% - %s)' % gap
            padding: 45px

        &--paguinho
            .pagcom
                &__title
                    color: var(--primary)

                &__text
                    color: var(--color-link)

                    span
                        color: var(--color-text-blue)